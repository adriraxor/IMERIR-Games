<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActMainMenu">

    <ImageView
        android:id="@+id/imBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/main_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="375dp"
        android:layout_height="100dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="156dp"
        android:contentDescription="Play game"
        android:src="@drawable/btn_play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/btnSkinMenu"
        android:layout_width="375dp"
        android:layout_height="100dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="88dp"
        android:contentDescription="Customization"
        android:src="@drawable/btn_customization"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPlay"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/btnQuit"
        android:layout_width="375dp"
        android:layout_height="100dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="92dp"
        android:contentDescription="Quit games"
        android:src="@drawable/btn_quit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSkinMenu"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>